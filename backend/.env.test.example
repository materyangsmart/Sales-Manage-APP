# ========================================
# 千张销售管理系统 - 测试环境配置示例
# ========================================
# 
# 使用说明：
# 1. 复制此文件为 .env.test
# 2. 测试环境专用配置
# 3. 用于E2E测试和集成测试
# ========================================

# ========================================
# 应用配置
# ========================================
NODE_ENV=test
PORT=3000

# ========================================
# 数据库配置 (MySQL)
# ========================================
DB_TYPE=mysql
DB_HOST=localhost
DB_PORT=3306
DB_USERNAME=qianzhang
DB_PASSWORD=password
DB_DATABASE=qianzhang_sales_test

# 数据库连接池配置
DB_CONNECTION_LIMIT=5
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SYNC=false

# ========================================
# Redis配置
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=1

# Redis连接配置
REDIS_KEY_PREFIX=qianzhang:test:
REDIS_TTL=3600

# ========================================
# JWT配置
# ========================================
JWT_SECRET=test-jwt-secret-key-for-testing-only
JWT_EXPIRES_IN=1d
JWT_REFRESH_EXPIRES_IN=7d

# ========================================
# 审计日志配置
# ========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=30

# ========================================
# 幂等性配置
# ========================================
IDEMPOTENCY_ENABLED=true
IDEMPOTENCY_TTL=3600

# ========================================
# CORS配置
# ========================================
CORS_ORIGIN=http://localhost:3001
CORS_CREDENTIALS=true

# ========================================
# Swagger配置
# ========================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=error
LOG_FORMAT=json

# ========================================
# 测试专用配置
# ========================================
TEST_TIMEOUT=30000
TEST_PARALLEL=false
