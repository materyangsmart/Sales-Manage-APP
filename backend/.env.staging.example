# ========================================
# 千张销售管理系统 - 预发布环境配置示例
# ========================================
# 
# 使用说明：
# 1. 复制此文件为 .env.staging
# 2. 预发布环境专用配置
# 3. 用于生产前的最终验证
# ========================================

# ========================================
# 应用配置
# ========================================
NODE_ENV=staging
PORT=3000

# ========================================
# 数据库配置 (MySQL)
# ========================================
DB_TYPE=mysql
DB_HOST=your-staging-db-host.com
DB_PORT=3306
DB_USERNAME=qianzhang_staging
DB_PASSWORD=change-this-to-strong-password
DB_DATABASE=qianzhang_sales_staging

# 数据库连接池配置
DB_CONNECTION_LIMIT=20
DB_SYNCHRONIZE=false
DB_LOGGING=false
DB_SYNC=false

# ========================================
# Redis配置
# ========================================
REDIS_HOST=your-staging-redis-host.com
REDIS_PORT=6379
REDIS_PASSWORD=change-this-to-strong-password
REDIS_DB=0

# Redis连接配置
REDIS_KEY_PREFIX=qianzhang:staging:
REDIS_TTL=3600

# ========================================
# JWT配置
# ========================================
JWT_SECRET=change-this-to-random-secret-key-for-staging
JWT_EXPIRES_IN=7d
JWT_REFRESH_EXPIRES_IN=30d

# ========================================
# 审计日志配置
# ========================================
AUDIT_LOG_ENABLED=true
AUDIT_LOG_RETENTION_DAYS=90

# ========================================
# 幂等性配置
# ========================================
IDEMPOTENCY_ENABLED=true
IDEMPOTENCY_TTL=86400

# ========================================
# CORS配置
# ========================================
CORS_ORIGIN=https://staging.your-domain.com
CORS_CREDENTIALS=true

# ========================================
# Swagger配置
# ========================================
SWAGGER_ENABLED=true
SWAGGER_PATH=api-docs

# ========================================
# 日志配置
# ========================================
LOG_LEVEL=info
LOG_FORMAT=json

# ========================================
# 监控配置
# ========================================
HEALTH_CHECK_ENABLED=true
METRICS_ENABLED=true
